.chat-group-form
  %h1 チャットグループ編集
  = form_for @group, id: "edit_chat_group_22.edit_chat_group" do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :"グループ名", class: "chat-group-form__label"
      .chat-group-form__field--right
        = f.text_field :name, id: "chat_group_name.chat-group-form__input"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        %label.chat-group-form__label{:for => "chat_group_チャットメンバーを追加"} チャットメンバーを追加
      .chat-group-form__field--right
        = f.collection_check_boxes(:user_ids, User.all, :id, :name) do |b|
          = b.label { b.check_box + b.text }
        #user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        %label.chat-group-form__label{:for => "chat_group_チャットメンバー"} チャットメンバー
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form__action-btn"
